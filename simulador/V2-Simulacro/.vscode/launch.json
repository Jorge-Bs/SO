{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Simulator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Simulator",
            "args": [
                "ex4","ex5","ex6"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Simulator with make",
            "miDebuggerPath": "/usr/bin/gdb"
        },
    ]
}